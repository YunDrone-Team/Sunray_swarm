<launch>
    <arg name="world" default="$(find sunray_swarm_sim)/worlds/ugv_mac_world.world"/>

	<!-- Gazebo 配置 -->
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="paused" default="false"/>
    <!-- Gazebo sim -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="world_name" value="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="false"/>
    </include>

    <!-- 第一个节点：启动1号无人车控制节点 - ugv_control_node -->
    <node pkg="sunray_swarm" type="ugv_control_node" name="ugv_control_node_1" output="screen">
        <param name="agent_id" value="1" />
        <param name="ugv_type" value="0" />
        <param name="pose_source" value="2" />
    </node>

    <!-- 第三个节点：启动RVIZ，对应的配置文件为single_agent.rviz -->
    <arg name="rviz_enable" default="false"/>
    <arg name="rivz_config" default="$(find sunray_swarm_sim)/launch_simulation/single_agent.rviz"/>
		<group if="$(arg rviz_enable)">
			<node type="rviz" name="rviz" pkg="rviz" args="-d $(arg rivz_config)"/>
    </group>
</launch>

